{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<header>
    <div class="cus-header-bg"></div>
    <div class="main-header w-100 px-3">
        <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="{{ asset('img/ahri.png') }}" class="d-block w-100 fluid" alt="ahri statue">
                </div>
                <div class="carousel-item">
                    <img src="{{ asset('img/lol.png') }}" class="d-block w-100 fluid" alt="league of legends produits">
                </div>
                <div class="carousel-item">
                    <img src="{{ asset('img/valo.png') }}" class="d-block w-100 fluid" alt="valorant produits">
                </div>
            </div>
        </div>
    </div>
</header>

<main>
    {# products section #}
    <div class="container-fluid my-5">
        <div class="row px-0 mx-0">
            {% for product in products %}
            <div class="col-sm-12 col-md-6 col-lg-3 ps-0 pe-sm-0 pe-md-1 pe-lg-1 pb-1">
                {% include "product/_product_card.html.twig" with { 'product': product } %}
            </div>
            {% endfor %}
        </div>
    </div>

    {# gift card #}
    <div class="cus-gift-card container-fluid text-start p-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-sm-12 col-md-8">
                    <h3>cartes cadeaux</h3>
                    <p class="gift-card-title">offrir une carte cadeau</p>
                    <button type="button" class="btn btn-secondary">Achetez maintenant</button>
                </div>
                <div class="col-sm-12 col-md-4 d-sm-none d-md-block d-lg-block">
                    <img src="{{ asset('img/cards.png') }}" alt="" class="img-fluid">
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}